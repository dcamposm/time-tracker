{% extends 'base.html.twig' %}

{% block title %}Time Tracker{% endblock %}

{% block body %}
<div class="fs-1 d-flex justify-content-center bg-primary p-5 text-white flex-column text-center">
	<h1>TIME TRACKER</h1>
	<span class="fs-5">BY DEMETRIO CAMPOS</span>
</div>
<main  class="container">
	
    {% if currentTask == false %}
    	<form class="m-5" method="get" action="{{ path('start_task') }}">
    		<div class="d-flex justify-content-evenly m-5">
    			<button class="btn btn-outline-success fs-2 ps-5 pe-5" id="start" type="submit">Start</button>
    		</div>
    		<input type="text" name="task[description]" class="form-control fs-2" placeholder="Insert your Task ..." aria-label="Insert your Task ..." aria-describedby="basic-addon1">
    	</form>
    {% else %}
        <div class="m-5 fs-1 d-flex justify-content-center" id="time" data-chronometer>
            {{ time }}
        </div>
        <form class="m-5" method="get" action="{{ path('stop_task') }}">
            <div class="d-flex justify-content-evenly m-5">
                <button class="btn btn-outline-danger fs-2 ps-5 pe-5">Stop</button>
            </div>
            <input type="text" name="task[description]" class="form-control fs-2" placeholder="Insert your Task ..." aria-label="Insert your Task ..." aria-describedby="basic-addon1" value="{{ currentTask[0].description }}" readonly>
        </form>
    {% endif %}
    <table class="table fs-3">
        <thead>
            <tr>
                <th>Description</th>
                <th>Time</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        {% for task in taskList %}
            <tr>
                <td>{{ task.description }}</td>
                <td>{{ task.calcHours }}</td>
                <td>{{ task.date }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main >
{% endblock %}
